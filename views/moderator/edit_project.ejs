<%- include('./partials/header.ejs') %>

<div class="container">
    <div class="row">
        <div class="col-lg-2"></div>
        <div class="col-lg-8">
            <div class="card">
                <div class="card-header">
                    <div class="card-title font-weight-bold">Edit Project</div>
                </div>
                <div class="card-body">
                    <form action="/project/updateProject/<%= project._id %>?_method=PUT" method="POST">
                        <div class="form-group">
                            <input type="text" name="topic" id="" value="<%= project.topic %>" >
                        </div>
                        <div class="form-group">
                            <select name="faulty" id="">
                                <option value="<%= project.faulty._id %>" selected><%= project.faulty.name %> </option>
                                <% faulties.map(faulty =>{ %> 
                                    <option value="<%= faulty._id %>"><%= faulty.name %></option>
                                <% }) %> 
                            </select>
                        </div>
                        <div class="form-group">
                            <textarea name="body" id="editor1" cols="30" rows="20" class="form-control tinymce"><%- project.body %> </textarea>
                        </div>
                        <button type="submit" class="btn btn-block teal darken-3 white-text font-weight-bold">Update</button>
                    </form>
                </div>
            </div>
        </div>
        <div class="col-lg-2"></div>
    </div>
</div>
