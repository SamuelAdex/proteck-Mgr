<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Login | ProTeck</title>
    <link rel="stylesheet" href="/bootstrap/css/bootstrap.min.css">
    <link rel="stylesheet" href="/bootstrap/css/bootstrap-icons.css">
    <link rel="stylesheet" href="/materialize/css/materialize.min.css">
    <link rel="stylesheet" href="/materialize/css/style.css">

    <style>
        body{
            background-image: linear-gradient(to right, rgb(38, 168, 168) ,  rgb(0, 77, 77));
        }
        .container .card{
            border-radius: 0;
        }
        .row .brand-logo{
            text-decoration: none;
            color: #000;
            font-size: 30pt;
            font-weight: bolder;
        }
        .row .brand-logo span{
            color: whitesmoke;
        }
    </style>
</head>
<body>
    <div class="container mt-lg-5">
        <div class="row">
            <div class="col-lg-3"></div>
            <div class="col-lg-6">
                <div class="text-center mb-2">
                    <a href="/" class="brand-logo"><span>Pro</span>Teck</a>
                </div>
                <div class="card">
                    <div class="card-header p-0">
                        <h4 class="text-center font-weight-bolder">Login</h4>
                    </div>
                    <div class="card-body">
                        <%- include('./partials/messages.ejs') %> 
                        <form action="/user/login" method="POST">
                            <div class="input-field mb-5">
                                <input type="email" name="email" id="" required>
                                <label for="email">Email</label>
                            </div>
                            <div class="input-field">
                                <input type="password" name="password" id="" required>
                                <label for="password">Password</label>
                            </div>
                            <!-- <small><a href="">Forgot Password?</a></small> -->
                            <button type="submit" class="btn btn-block btn-small mt-4 rounded font-weight-bold teal darken-4">Login</button>
                        </form><br>
                        <center>
                            <small class="font-weight-bolder">Thanks for stopping By :)</small>
                        </center>
                    </div>
                </div>
            </div>
            <div class="col-lg-3"></div>
        </div>
    </div>


    
    <script src="/bootstrap/js/Jquery.js"></script>
    <script src="/bootstrap/js/bootstrap.min.js"></script>
    <script src="/materialize/js/materialize.min.js"></script>
    <script src="/materialize/js/script.js"></script>
</body>
</html>